<% provide(:title, 'The Ugly Indian') %>
<% provide(:subtitle, 'Sign in') %>
<div class="header">
  <h1><%= yield(:title) %></h1>
  <h2><%= yield(:subtitle) %></h2>
</div>
<div class="content">
  <div class="textcontent">
    <%= render 'shared/messages' %>
<div class="formcontent">

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => 'pure-form pure-form-stacked', :id => 'top-form' }) do |f| %>
 <%= devise_error_messages! %>
<fieldset>
  <%= f.label :email %>
  <%= f.email_field :email, autofocus: true %>

  <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off" %>

  <% if devise_mapping.rememberable? %>
    <%= f.label :remember_me , :class => 'pure-checkbox' do %> <%= f.check_box :remember_me %> Remember me <% end %>
  <% end %>

 <%= f.submit "Log in", :class => 'pure-button pure-button-primary' %>
 </fieldset>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
