<% provide(:title, 'Spot') %>
<% provide(:subtitle, @spot.address) %>
<div class="content">
  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-1-2">
      <div id="map-spot">
      </div>
    </div>
    <div class="pure-u-1 pure-u-md-1-2">
      <img class="pure-img" src='<%= @spot.photo %>'/><br/>
      Description:
      <%= @spot.description %>
      <br/>
      Proposed Date:
      <%= @spot.date %>
      <br/>
    </div>
    <script>
	var mapOptions = {
		center: {
			lat: <%= @spot.lat %> ,
			lng: <%= @spot.lng %>
		},
		zoom: 16
	};
	map = new google.maps.Map(document.getElementById('map-spot'), mapOptions);
	marker = new google.maps.Marker({
		position: {
			lat: <%= @spot.lat %> ,
			lng: <%= @spot.lng %>
		},
		map: map
	});
    </script>
  </div>
