<% provide(:title, 'Report') %>
<% provide(:subtitle, 'Report a spot') %>
<div class="content">
  <%= form_for(@spot, :html => {:class => 'pure-form pure-form-stacked', :id => 'top-form'}) do |f| %>
  <div class="pure-g">
  <div class="pure-u-3-4 pure-u-md-1-2">
  <div class="info alert-dismissible" id='instruction'>
  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span></button>
    <%= @spot.status == 1 ? 'Spot already reported' : 'Report the spot' %>
  </div>
  <%= render 'shared/error_messages' %>
  </div>
  </div>
    <fieldset>
      <div class="pure-g" id='editspotform'>
        <div class="pure-u-3-4 pure-u-md-1-2">
          <%= f.hidden_field :lat %>
          <%= f.hidden_field :lng %>
          <%= f.text_area :address, :class => 'pure-input-1', :placeholder => 'Address', :readonly=>true %>
          <%= f.text_field :after_photo, :class => 'pure-input-1', :placeholder => 'Photo URL After', :readonly => @spot.status == 1 ? true : false %>
          <%= f.text_area :after_desc, :class => 'pure-input-1', :placeholder => 'Description After', :readonly => @spot.status == 1 ? true : false %>
          <%= f.date_field :date, :class => 'pure-input-1', :placeholder => 'dd/mm/yyyy', :readonly=>true %>
          <%= f.submit 'Submit', class: "pure-button pure-button-primary", id: "submit", :disabled => @spot.status == 1 ? true : false %>
          <%= f.hidden_field :status, :value => 1 %>
          <%= link_to "Cancel", report_path, class: "pure-button button-error" %>
        </div>
      </div>
    </fieldset>
  <% end %>
  <div id="map-canvas-edit">
  </div>
</div>
<script>
 var marker;
    var infowindow = null;
    var map;
            var mapOptions = {
                zoom: 16,
                zoomControl: true,
                zoomControlOptions: {
                    style: google.maps.ZoomControlStyle.DEFAULT,
                    position: google.maps.ControlPosition.TOP_RIGHT
                },
                streetViewControl: false,
                mapTypeControl: true,
                panControl: false,
                rotateControl: false,
                scaleControl: false,
                overviewMapControl: false
            };
            map = new google.maps.Map(document.getElementById('map-canvas-edit'), mapOptions);
            marker = new google.maps.Marker({
                position: new google.maps.LatLng( <%= @spot.lat %> , <%= @spot.lng %> ),
                address: '<%= @spot.address %>',
                id: '<%= @spot.id %>',
                icon: '<%= asset_path @spot.status == 1 ? 'flag-g.png' : 'flag-r.png' %>',
                map: map
            });
            map.setCenter(marker.position);
             google.maps.event.addDomListener(window, "resize", function() {
      var center = map.getCenter();
      google.maps.event.trigger(map, "resize");
      map.setCenter(center);
    });
</script>